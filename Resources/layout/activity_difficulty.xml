<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@drawable/XpPic"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:textSize="@dimen/title_text_size"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:text="@string/difficulty"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        android:text="@string/difficulty_info"
        android:textColor="@android:color/black"/>
    <Button
        android:id="@+id/btnDifficultyOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:background="@drawable/gridpicsmall"
        android:textColor="@android:color/black"
        android:text="@string/difficulty_one"/>
    <Button
        android:id="@+id/btnDifficultyTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:background="@drawable/gridpicsmall"
        android:textColor="@android:color/black"
        android:text="@string/difficulty_two"/>
    <Button
       android:id="@+id/btnDifficultyThree"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textAllCaps="false"
       android:background="@drawable/gridpicsmall"
       android:textColor="@android:color/black"
       android:text="@string/difficulty_three"/>
</LinearLayout>