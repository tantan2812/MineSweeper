<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:orientation="vertical"
    android:background="@drawable/XpPic">
    <TextView
        android:id="@+id/tvWon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin"
        android:gravity="center"
        android:textSize="@dimen/title_text_size"
        android:textColor="@android:color/black"
        android:text="@string/win"/>
    <LinearLayout
        android:id="@+id/clicksRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/tvWinStatsclicks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_small"
            android:textColor="@android:color/black"
            android:text="@string/win_click_stat"/>
        <TextView
            android:id="@+id/clicks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_small"
            android:textColor="@android:color/black"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/animationRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/animation1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/animation"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/animation2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/animation"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/animation3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/animation"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/animation4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/animation"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/animation5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/animation"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
